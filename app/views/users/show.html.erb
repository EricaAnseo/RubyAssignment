<% provide(:title, @user.name) %>
<% if logged_in? %>
	<div class="row">
		<aside class="col-sm-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
		</aside>
		<aside class="col-sm-8">
			<section class="user_info">
				<%= render 'shared/feed' %>
			</section>
		</aside>
	</div>
<% else %>
	Sorry, you do not have access to this page. Please login to view this page. 
	<h1><%= @user.name %></h1>
	<div class="row">
		<div class="col-md-12">
	        <% if @user.products.any? %>
	          <h3>Products (<%= @user.products.count %>)</h3>
	          <ol class="products">
	            <%= render @products %> <!--Construct the partial's of products/_product.html.erb  -->
	          </ol>
	        <% end %>
	    </div>
	    <%= render 'shared/feed' %>
	</div>
<% end %>