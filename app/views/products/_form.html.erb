 <%= form_for(@product) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label 'Product_Name' %>
	<%= f.text_field :prodname, class: 'form-control' %>

	<%= f.label 'Description' %>
	<%= f.text_area :description, class: 'form-control' %>

	<%= f.label 'Price   (â‚¬)' %>
	<%= f.number_field :price, min:0, step: 0.01, class: 'form-control' %>

	<%= f.label 'Shipping Cost' %>
	<%= f.number_field :ship_cost, min:0, step: 0.01, class: 'form-control' %>

	<%= f.label 'Stock' %>
	<%= f.number_field :stock, min:0, step: 0.01, class: 'form-control' %>

	<%#= f.label 'Category' %>
	<%#= f.collection_select(:id, Category.all, :id, :category_name, {}, {:class => 'form-control'})    %>

	<%= f.label 'Product_Image' %>
	<%= f.file_field :avatar, class: "form-control" %>

	<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>