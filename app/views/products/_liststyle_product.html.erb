<div class="row">
	<div class="col-xs-4">
		<%= image_tag product.avatar %>
	</div>
	<div class="col-xs-8">
		<div class="row">
			<div class="col-sm-9">
				<h4 class="prod-name">
					<%= product.prodname %>
				</h4>
			</div>
			<div class="col-sm-3">
				<h5 class="prod-price"><%= number_to_currency(product.price, :locale => :en) %></h5>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6">
				<span class="timestamp">
					<%= time_ago_in_words(product.created_at) %> ago <br>
				</span>
			</div>
			<div class="col-xs-6">
				<%= render 'products/like_buttons', product: product %>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12 prod-desc">
		<%= product.description %>
	</div>
</div>

	