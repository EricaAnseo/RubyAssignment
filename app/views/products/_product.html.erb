<div class="col-sm-6 product-item" id="product-<%= product.id %>">
	<%= product.img_path %>
	
	<h4 class="prod-name"><%= product.prodname %></h4>
	<span class="prod-desc"><%= product.description %></span><br>
	<span class="prod-price"><%= number_to_currency(product.price, :locale => :en) %></span><br>
	<span class="user"><%= product.user.name %></span><br>
	<span class="timestamp">
		<%= time_ago_in_words(product.created_at) %> ago <br>
		 <!-- START DELETE LINK -->
        <% if current_user?(product.user) %>
          <%= button_to "delete", product, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
        <!-- END DELETE LINK -->
	</span>
	<% if logged_in?  %>
		<% if !current_user?(product.user) %>
		<%= form_for(@purchase) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.number_field :amount, step: 1, placeholder: "Amount", default: 0 %>
			</div>
			<%= f.submit "Add to Cart", class: "btn btn-primary" %>
		<% end %>
		<%= button_to 'Add to Wishlist', method: :add_to_cart, :id => product%>
		<% end %>
	<% end %>
</div>